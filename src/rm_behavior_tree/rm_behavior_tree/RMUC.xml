<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="BehaviorTree">
    <Sequence>
      <SubDecisionStatus topic_name="decision_status"
                         decision_status="{decision_status}"/>
      <IfThenElse>
        <IsGameStart message="{decision_status}"/>
        <ReactiveSequence>
          <IfThenElse>
            <IsStatusOK message="{decision_status}"
                        hp_threshold="200"/>
            <ReactiveSequence>
              <SendGoal goal_pose="7.38;4.74;0; 0;0;0;1"
                        action_name="navigate_to_pose"/>
              <IfThenElse>
                <IsTimeTriggered message="{decision_status}"
                                 flag_time="240"/>
                <ReactiveSequence>
                  <SendGoal goal_pose="-0.72;-7.38;0; 0;0;0;1"
                            action_name="navigate_to_pose"/>
                </ReactiveSequence>
                <Sequence>
                  <SimpleSuccess/>
                </Sequence>
              </IfThenElse>
            </ReactiveSequence>
            <Sequence>
              <SendGoal goal_pose="-0.72;-7.38;0; 0;0;0;1"
                        action_name="navigate_to_pose"/>
            </Sequence>
          </IfThenElse>
        </ReactiveSequence>
        <Sequence>
          <SendGoal goal_pose="0.41;-1.06;0; 0;0;0;1"
                    action_name="navigate_to_pose"/>
        </Sequence>
      </IfThenElse>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="IsGameStart"
            editable="true">
      <input_port name="message"
                  default="{decision_status}"/>
    </Action>
    <Action ID="IsStatusOK"
            editable="true">
      <input_port name="message"
                  default="{decision_status}"/>
      <input_port name="hp_threshold"
                  default="100"/>
    </Action>
    <Action ID="IsTimeTriggered"
            editable="true">
      <input_port name="message"
                  default="{decision_status}"/>
      <input_port name="flag_time"
                  default="300"/>
    </Action>
    <Action ID="SendGoal"
            editable="true">
      <input_port name="goal_pose"
                  default="0;0;0; 0;0;0;1"/>
      <input_port name="action_name"
                  default="navigate_to_pose"/>
    </Action>
    <Action ID="SimpleSuccess"/>
    <Action ID="SubDecisionStatus"
            editable="true">
      <input_port name="topic_name"
                  default="decision_status"/>
      <output_port name="decision_status"
                   default="{decision_status}"/>
    </Action>
  </TreeNodesModel>

</root>
